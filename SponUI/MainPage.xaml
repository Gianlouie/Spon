<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SponUI.MainPage">

    <Grid RowDefinitions="50, Auto, *"
          ColumnDefinitions=".125*, .125*, .50*, .25*"
          Padding="20"
          ColumnSpacing="20"
          RowSpacing="20">

        <Image Grid.Column="0" Source="menu_icon.png"></Image>
        <Image Grid.Column="1" Source="event_icon.png"></Image>
        <Image Grid.Column="2" Source="logo_fullcolor.png"></Image>
        <Image Grid.Column="3" Source="message_icon.png"></Image>

        <CollectionView Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="4">
            <CollectionView.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Event 1</x:String>
                    <x:String>Event 2</x:String>
                    <x:String>Event 3</x:String>
                </x:Array>
            </CollectionView.ItemsSource>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="0,5">
                        <Frame>
                            <Label Text="{Binding .}"
                                   FontSize="24">
                            </Label>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
    
    

</ContentPage>

